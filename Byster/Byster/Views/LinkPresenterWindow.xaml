<Window x:Class="Byster.Views.LinkPresenterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Byster.Views"
        mc:Ignorable="d"
        Title="LinkPresenterWindow" Height="420" Width="400"
        ResizeMode="NoResize" ShowInTaskbar="True" WindowStartupLocation="CenterScreen" WindowStyle="None"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        AllowsTransparency="True"
        Icon="/byster.ico">
    <Window.Resources>
        <ResourceDictionary Source="/Views/Styles.xaml"/>
    </Window.Resources>
    <Border Background="{StaticResource BackgroundWindowColor}"
            BorderBrush="{StaticResource BorderProductItemColor}"
            BorderThickness="1">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="37"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" x:Name="titleTextBlock" Style="{DynamicResource titleTextBlockStyle}" FontSize="15" Margin="0" TextAlignment="Center"/>
            <Image x:Name="linkImagePresenter" Grid.Row="1" Width="300" Height="300"/>
            <TextBlock Grid.Row="2" x:Name="infoTextBlock" TextWrapping="Wrap"  Style="{StaticResource infoTextBlockStyle}" Margin="0, 4"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
            </TextBlock>
            <Grid Grid.Row="3">
                <Button Style="{StaticResource transparentButtonStyle}" Content="ОК" Width="100" Margin="0, 0, 0, 0" HorizontalAlignment="Right" IsDefault="True" x:Name="okBtn" Click="okBtn_Click"/>
                <Button Style="{StaticResource bStyle}" Content="Ссылка на оплату" Width="150" Margin="0, 0, 0, 0" HorizontalAlignment="Left" IsDefault="True" x:Name="linkBtn" Click="linkBtn_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
