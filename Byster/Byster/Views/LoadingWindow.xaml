<Window x:Class="Byster.Views.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Byster.Views"
        mc:Ignorable="d"
        Title="LoadingWindow" Height="180" Width="300"
        WindowStyle="None" WindowStartupLocation="CenterScreen"
        Background="Black" Loaded="Window_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition  Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Image Source="../Resources/Images/logo-registration.png" Stretch="None" Grid.Row="0"/>
        <ProgressBar DockPanel.Dock="Bottom" Margin="0" Grid.Row="1" VerticalAlignment="Stretch" x:Name="statusUpdate" />
    </Grid>
</Window>
