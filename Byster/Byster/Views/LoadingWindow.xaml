<Window x:Class="Byster.Views.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Byster.Views"
        mc:Ignorable="d"
        Title="LoadingWindow" Height="180" Width="300"
        WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="{DynamicResource BackgroundWindowColor}" Loaded="Window_Loaded" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Window.Resources>
        <ResourceDictionary Source="./Styles.xaml"/>
    </Window.Resources>
    <Grid Margin="20, 10">
        <Grid.RowDefinitions>
            <RowDefinition  Height="*"/>
            <RowDefinition Height="0.25*"/>
        </Grid.RowDefinitions>
        <Image Source="../Resources/Images/logo.png" Stretch="None" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <ProgressBar Style="{StaticResource prbStyle}" Margin="0" Grid.Row="1" VerticalAlignment="Stretch" x:Name="statusUpdate"/>
    </Grid>
</Window>
