<Window x:Class="Byster.Views.LoginOrRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Byster.Views"
        mc:Ignorable="d"
        Title="Login"
        Height="426"
        Width="340"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#202124"
        WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown" Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary Source="./Styles.xaml"/> <!--Стили-->
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Button x:Name="closeButton" HorizontalAlignment="Right" Style="{StaticResource cbStyle}" Click="closeButton_Click"/>
            <Image Source="../Resources/Images/logo-registration.png" Stretch="None" Margin="0 0 0 5"/>
            <Grid x:Name="authBlock" Visibility="Visible">
                <StackPanel Margin="20, 0">
                    <TextBox Style="{StaticResource tbStyle}" x:Name="loginBox" Tag="Логин"/>
                    <PasswordBox Style="{StaticResource pbStyle}" x:Name="passwordBox" Tag="Пароль" PasswordChanged="passwordBox_PasswordChanged"/>
                    <Button Style="{StaticResource bStyle}" Content="Авторизоваться" x:Name="loginBtn" Click="loginBtn_Click" IsDefault="True"/>
                    <TextBlock>
                <Hyperlink x:Name="navigateToRegister" Style="{StaticResource hlStyle}" Click="navigateToRegister_Click">Зарегистрироваться?</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
            <Grid x:Name="registerBlock" Visibility="Collapsed">
                <StackPanel Margin="20, 0">
                    <TextBox Style="{StaticResource tbStyle}" x:Name="newLoginBox" Tag="Логин"/>
                    <PasswordBox Style="{StaticResource pbStyle}" x:Name="newPasswordBox" Tag="Пароль" PasswordChanged="newPasswordBox_PasswordChanged"/>
                    <PasswordBox Style="{StaticResource pbStyle}" x:Name="newPasswordConfirmBox" Tag="Подтвердите пароль" PasswordChanged="newPasswordConfirmBox_PasswordChanged" />
                    <TextBox Style="{StaticResource tbStyle}" x:Name="referalBox" Tag="Реферал код"/>
                    <ComboBox x:Name="registerChoicesComboBox"/>
                    <Button Style="{StaticResource bStyle}" x:Name="registerBtn" Content="Зарегистрироваться" Click="registerBtn_Click"/>
                    <TextBlock>
                        <Hyperlink x:Name="navigateToAuth" Style="{StaticResource hlStyle}" Click="navigateToAuth_Click">Авторизоваться?</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
