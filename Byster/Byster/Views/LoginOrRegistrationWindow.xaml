<Window x:Class="Byster.Views.LoginOrRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Byster.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Login"
        Height="330"
        Width="340"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundWindowColor}"
        WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown" Loaded="Window_Loaded"
        AllowsTransparency="True">
    <Window.Resources>
        <ResourceDictionary Source="./Styles.xaml"/> <!--Стили-->
    </Window.Resources>
    <Window.Effect>
        <DropShadowEffect ShadowDepth="0" BlurRadius="20"
                          Color="{DynamicResource EffectProductItemColor}"/>
    </Window.Effect>
    <Grid>
        <Grid.Resources>
            <Thickness x:Key="marginUI">0, 7</Thickness>
        </Grid.Resources>
        
        <StackPanel>
            <Button x:Name="closeButton" HorizontalAlignment="Right" Style="{StaticResource uibStyle}" Height="45" Width="45" Click="closeButton_Click">
                <Image Source="../Resources/Images/close-button-image.png" Stretch="Uniform" Margin="12"/>
            </Button>
            <Image Source="../Resources/Images/logo.png" Stretch="None" Margin="0 0 0 5"/>
            <Grid x:Name="authBlock" Visibility="Visible">
                <StackPanel Margin="20, 0">
                    <TextBox Style="{StaticResource tbStyle}" x:Name="loginBox" Tag="Логин" Margin="{StaticResource marginUI}"/>
                    <PasswordBox Style="{StaticResource pbStyle}" x:Name="passwordBox" Tag="Пароль" PasswordChanged="passwordBox_PasswordChanged" Margin="{StaticResource marginUI}"/>
                    <Button Style="{StaticResource bStyle}" Content="Авторизоваться" x:Name="loginBtn" Click="loginBtn_Click" Margin="{StaticResource marginUI}" IsDefault="True"/>
                    <TextBlock Margin="{StaticResource marginUI}">
                <Hyperlink x:Name="navigateToRegister" Style="{StaticResource hlStyle}" Click="navigateToRegister_Click">Зарегистрироваться?</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
            <Grid x:Name="registerBlock" Visibility="Collapsed">
                <StackPanel Margin="20, 0">
                    <TextBox Style="{StaticResource tbStyle}" x:Name="newLoginBox" Tag="Логин" Margin="{StaticResource marginUI}"/>
                    <PasswordBox Style="{StaticResource pbStyle}" x:Name="newPasswordBox" Tag="Пароль" PasswordChanged="newPasswordBox_PasswordChanged" Margin="{StaticResource marginUI}"/>
                    <PasswordBox Style="{StaticResource pbStyle}" x:Name="newPasswordConfirmBox" Tag="Подтвердите пароль" PasswordChanged="newPasswordConfirmBox_PasswordChanged" Margin="{StaticResource marginUI}"/>
                    <TextBox x:Name="referalBox" Tag="Реферал код" Margin="{StaticResource marginUI}">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource tbStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=registerChoicesComboBox, Path=SelectedItem.need_referral_code}" Value="false">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Text" Value=""/>
                                        <Setter Property="Background" Value="{DynamicResource BackgroundUIColorHover}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <ComboBox x:Name="registerChoicesComboBox" Margin="{StaticResource marginUI}" Style="{StaticResource combobStyle}"/>
                    <Button Style="{StaticResource bStyle}" x:Name="registerBtn" Content="Зарегистрироваться" Click="registerBtn_Click" Margin="{StaticResource marginUI}"/>
                    <TextBlock Margin="{StaticResource marginUI}">
                        <Hyperlink x:Name="navigateToAuth" Style="{StaticResource hlStyle}" Click="navigateToAuth_Click">Авторизоваться?</Hyperlink>
                    </TextBlock>
                </StackPanel>
                
            </Grid>
        </StackPanel>
        <Grid Background="#A0000000" x:Name="autoAuthPresenterGrid">
            <TextBlock Style="{DynamicResource orangeTextBlockStyle}" Text="Попытка входа..." VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
        </Grid>
    </Grid>
</Window>
