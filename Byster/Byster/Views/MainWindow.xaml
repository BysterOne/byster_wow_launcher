<Window x:Class="Byster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Byster"
        mc:Ignorable="d"
        Title="MainWindow" Height="585" Width="975"
        WindowStyle="None" WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize" Background="{DynamicResource BackgroundWindowColor}" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Window.Resources>
        <ResourceDictionary Source="./Styles.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="85"/>
            <RowDefinition/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" x:Name="topPanel">
            <Image Margin="10, 10, 0, 10" Source="../Resources/Images/logo.png" Stretch="Uniform" VerticalAlignment="Stretch" Grid.ColumnSpan="2" HorizontalAlignment="Left"/>
            <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Orientation="Horizontal">
                <Button Style="{DynamicResource mbStyle}" Height="30" Padding="4" Width="30" x:Name="minimizeBtn" Click="minimizeBtn_Click"/>
                <Button Style="{DynamicResource cbStyle}" Height="30" Padding="4" Width="30" x:Name="closeBtn" Click="closeBtn_Click" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            </StackPanel>
        </Grid>
        
        <!-- Главная -->
        <Grid Grid.Row="1" Grid.Column="0" x:Name="sidePanel">

        </Grid>
        
        <Border Grid.Column="1" Grid.Row="1" x:Name="mainPanel" BorderThickness="1" BorderBrush="{DynamicResource BorderMainWindowColor}" Background="{DynamicResource BackgroundMainWindowColor}" >
            <Grid>
                <ListBox x:Name="rotationsView" Style="{DynamicResource rotationsViewStyle}">
                    <ListBox.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
                    </ListBox.Resources>
                </ListBox>
            </Grid>
        </Border>

        <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" x:Name="BottomPanel" Background="{DynamicResource BackgroundControlColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Style="{DynamicResource infotbStyle}" Text="NickName" Margin="10, 0" />
                <Path Fill="{DynamicResource FontInfoColor}" Data="M 0 4 L 4 0 L 8 4 z" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Path.RenderTransform>
                        <RotateTransform Angle="90"/>
                    </Path.RenderTransform>
                </Path>
                <TextBlock Style="{DynamicResource infotbStyle}" Text="Server" Margin="10, 0"></TextBlock>
            </StackPanel>
            <Grid Grid.Column="1" Margin="15" x:Name="BottomControls" HorizontalAlignment="Right" Width="300">
                <Grid x:Name="startControls" Visibility="Collapsed">
                    <Button Style="{DynamicResource bStyle}" Content="Запустить"/>
                </Grid>
                <Grid x:Name="shopControls" Visibility="Collapsed">
                    <Button Style="{DynamicResource bStyle}" Content="Магазин"/>
                </Grid>
                <Grid x:Name="processControls">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Style="{DynamicResource titletbStyle}" Text="Дождитесь завершения загрузки" VerticalAlignment="Bottom" Margin="0, 0, 0, 5" Grid.Row="0"/>
                    <ProgressBar Style="{DynamicResource prbStyle}" Grid.Row="1"/>
                </Grid>
            </Grid>
        </Grid>
        <!-- Магазин -->
    </Grid>
</Window>
