        <Style TargetType="ToolTip" 
               BasedOn="{StaticResource {x:Type ToolTip}}">
            <Setter Property="Background" Value="{StaticResource clrBackground}" />
            <Setter Property="Foreground" Value="{StaticResource clrWhite}" />
            <Setter Property="BorderBrush" Value="{StaticResource clrWhite}" />
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Open Sans"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="{StaticResource clrWhite}"/>
        </Style>

        <DataTemplate x:Key="characterTemplate">
            <StackPanel>
                <Button Style="{StaticResource styleButtonBase}" Height="60">
                    <Border Width="48"
                            Height="48"
                            BorderBrush="{StaticResource clrWhite}"
                            BorderThickness="0"
                            CornerRadius="100"
                            ToolTip="{Binding Path=Name}">
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding Path=Icon}" />
                            </Ellipse.Fill>
                        </Ellipse>
                    </Border>
                </Button>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Border Margin="15">
        <Border.Effect>
            <DropShadowEffect 
                Color="#34373d"
                BlurRadius="15" 
                ShadowDepth="0" 
                Opacity="0.8" />

        </Border.Effect>
        <Grid Background="{StaticResource clrBackground}" Margin="3,3,-3,-3">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="*" />

            </Grid.RowDefinitions>
            <Grid Background="{StaticResource clrBlack}" MouseDown="Grid_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="115" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="190" />
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <Path Grid.ColumnSpan="3" Fill="{StaticResource clrWhiteOver}"
                        Data="M 0 0 L 700 0 L 680 20 L 20 20 L 0 0" 
                      HorizontalAlignment="Center" Margin="100,0,70,0" Width="700"/>

                <Image Grid.RowSpan="2" 
                       RenderOptions.BitmapScalingMode="HighQuality"
                       Margin="10, 10, 20, 10" 
                       Source="../Content/Images/logo.png" />

                <Button Click="btnMinimize_Click"
                        Style="{StaticResource styleButtonBase}"
                        Grid.Column="3" Height="30" 
                        VerticalAlignment="Top">
                    <Path Data="{StaticResource iMinimaize}" 
                          Fill="{StaticResource clrWhiteOver}"
                          Stretch="Uniform" 
                          Width="20" Height="20"
                          VerticalAlignment="Bottom" />
                </Button>
                <Button Click="btnClose_Click"
                        Style="{StaticResource styleButtonBase}"
                        Grid.Column="4" Height="30"
                        VerticalAlignment="Top">
                    <Path Data="{StaticResource iClose}" 
                          Fill="{StaticResource clrWhiteOver}"
                          Stretch="Uniform" 
                          Width="20" Height="20" />
                </Button>

                <StackPanel Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" 
                            Orientation="Horizontal" FlowDirection="RightToLeft">
                    <Button Click="btnSettings_Click"
                        Style="{StaticResource styleButtonBase}"
                        Grid.Column="4" Width="40" Height="40" Margin="5">
                        <Path Data="{StaticResource iSettings}" 
                          Fill="{StaticResource clrWhite}"
                          Stretch="Uniform" 
                          Width="30" Height="30" />
                    </Button>

                    <TextBlock x:Name="txtLogin" HorizontalAlignment="Center" VerticalAlignment="Center">
                        UserLogin
                    </TextBlock>
                </StackPanel>
                <ListBox x:Name="headerList"
                        BorderThickness="0"
                        Background="Transparent"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                        ScrollViewer.CanContentScroll="False"
                        Grid.Row="1" Grid.Column="1" 
                        VerticalAlignment="Bottom" Height="50">

                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate >
                            <VirtualizingStackPanel IsItemsHost="True" Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="FontSize" Value="32" />
                            <Setter Property="Foreground" Value="{StaticResource clrWhite}" />
                            <Setter Property="Margin" Value="10,0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListBoxItem}" >
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Effect" Value="{StaticResource textShadow}" />
                                    <Setter Property="Foreground" Value="{StaticResource clrYellow}" />
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Effect" Value="{StaticResource textShadow}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBoxItem IsSelected="True" Selected="ListBoxItem_Selected">РОТАЦИИ</ListBoxItem>
                    <ListBoxItem Selected="ListBoxItem_Selected">МАГАЗИН</ListBoxItem>
                    <ListBoxItem Selected="ListBoxItem_Selected">НОВОСТИ</ListBoxItem>
                </ListBox>
            </Grid>
            <TabControl x:Name="contentMenu" Grid.Row="1">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabControl}">
                        <Setter Property="SnapsToDevicePixels" Value="True" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TabControl}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Border x:Name="Border" >
                                            <ContentPresenter x:Name="PART_SelectedContentHost" ContentSource="SelectedContent" />
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <TabItem Header="Выбор" IsSelected="True" x:Name="tabSelect">
                    <Grid x:Name="gridMain" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"  />
                            <RowDefinition Height="80" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid Background="{StaticResource clrBlack}" Grid.RowSpan="2">
                            <Grid.RowDefinitions >
                                <RowDefinition Height="80" />
                                <RowDefinition Height="10" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Button x:Name="btnNewWoW"
                            Click="NewWoW_Click" 
                            Style="{StaticResource styleButtonBase}" 
                            Foreground="{StaticResource clrWhite}">
                                <Button.Content>
                                    <Grid Height="48" Width="48">
                                        <Border BorderThickness="2" 
                                BorderBrush="{Binding ElementName=btnNewWoW, Path=Foreground}"
                                CornerRadius="28"/>

                                        <Border Width="20" Height="4" 
                                Background="{Binding ElementName=btnNewWoW, Path=Foreground}" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                CornerRadius="1" />

                                        <Border Width="4" Height="20" 
                                Background="{Binding ElementName=btnNewWoW, Path=Foreground}" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                CornerRadius="1" />
                                    </Grid>
                                </Button.Content>
                            </Button>

                            <Grid Grid.Row="1">
                                <Line X1="15" X2="65" Y1="5" Y2="5" Stroke="{StaticResource clrWhite}" StrokeThickness="0.5"></Line>
                            </Grid>

                            <ListBox x:Name="charactersList"
                            ItemTemplate="{StaticResource characterTemplate}"
                            BorderThickness="0"
                            Background="Transparent"
                            ScrollViewer.VerticalScrollBarVisibility="Hidden"
                            ScrollViewer.CanContentScroll="False"
                            Grid.Row="2" Height="430" VerticalAlignment="Bottom">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate >
                                        <VirtualizingStackPanel IsItemsHost="True" Orientation="Vertical" />
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="{x:Type ListBoxItem}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                    <ContentPresenter/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>

                        </Grid>


                        <Grid
                      Grid.Column="1"
                      Grid.ColumnSpan="3"
                      Background="{StaticResource clrBlack}" Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>



                            <Grid Grid.RowSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                            </Grid>

                            <Button Click="btnLevel_Click"
                        Style="{StaticResource styleButtonBase}" >
                                <Path Data="{StaticResource iUser0}" 
                          Fill="{StaticResource clrWhite}"
                          Stretch="Uniform" 
                          Width="30" Height="30" />
                            </Button>

                            <TextBlock Grid.Column="1" x:Name="txtBonuses"
                               VerticalAlignment="Center" FontSize="40">
                        12345
                            </TextBlock>

                            <Button Click="btnDiscord_Click"
                            Grid.Column="2"
                            Style="{StaticResource styleButtonBase}" 
                            Foreground="{StaticResource clrWhite}">
                                <Path Data="{StaticResource iDiscord}" 
                              Fill="{StaticResource clrWhite}"
                              Stretch="Uniform"
                              Margin="10"/>
                            </Button>

                            <Button Click="btnVK_Click"
                            Grid.Column="3"
                            Style="{StaticResource styleButtonBase}" 
                            Foreground="{StaticResource clrWhite}">
                                <Path Data="{StaticResource iVK}" 
                              Fill="{StaticResource clrWhite}"
                              Stretch="Uniform"
                              Margin="10"/>
                            </Button>

                            <Button Click="btnYoutube_Click"
                            Grid.Column="4"
                            Style="{StaticResource styleButtonBase}" 
                            Foreground="{StaticResource clrWhite}">
                                <Path Data="{StaticResource iYouTube}" 
                              Fill="{StaticResource clrWhite}"
                              Stretch="Uniform"
                              Margin="10"/>
                            </Button>



                        </Grid>

                        <Grid Grid.ColumnSpan="2"
                      Grid.Column="1">
                            <DataGrid Background="Transparent"
                              x:Name="tableRotations"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              CanUserResizeRows="False"
                              CanUserResizeColumns="False"
                              SelectionMode="Single"
                              RowHeaderWidth="0"
                              BorderThickness="1"
                              IsReadOnly="True" 
                              HorizontalContentAlignment="Center"
                              VerticalContentAlignment="Center"
                              HorizontalGridLinesBrush="{StaticResource clrBlack}"
                              VerticalGridLinesBrush="{StaticResource clrBlack}"
                              BorderBrush="{StaticResource clrBackground}" >
                                <DataGrid.Resources>
                                    <ResourceDictionary>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="Foreground" Value="{StaticResource clrWhite}"/>
                                            <Setter Property="FontSize" Value="18" />
                                            <Setter Property="Background" Value="{StaticResource clrBackground}" />
                                            <Setter Property="BorderBrush" Value="{StaticResource clrBackground}" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                                                        <Grid Background="{TemplateBinding Background}">
                                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource clrWhite}"/>
                                                    <Setter Property="FontSize" Value="18" />
                                                    <Setter Property="Background" Value="{StaticResource clrBackground}" />
                                                    <Setter Property="BorderBrush" Value="{StaticResource clrBackground}" />
                                                </Trigger>

                                            </Style.Triggers>
                                        </Style>
                                        <Style TargetType="{x:Type DataGridRow}">
                                            <Setter Property="Foreground" Value="{StaticResource clrWhite}"/>
                                            <Setter Property="FontSize" Value="18" />
                                            <Setter Property="Background" Value="{StaticResource clrBackground}" />
                                            <Setter Property="BorderBrush" Value="{StaticResource clrBackground}" />
                                            <Setter Property="Height" Value="40" />
                                            <Style.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource clrWhite}"/>
                                                    <Setter Property="FontSize" Value="18" />
                                                    <Setter Property="Background" Value="{StaticResource clrBackground}" />
                                                    <Setter Property="BorderBrush" Value="{StaticResource clrBackground}" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ResourceDictionary>
                                </DataGrid.Resources>
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                        <Setter Property="Background" Value="{StaticResource clrBlack}" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="FontSize" Value="18" />
                                        <Setter Property="Foreground" Value="{StaticResource clrYellow}" />
                                        <Setter Property="Height" Value="40" />
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Название" Binding="{Binding Path=Name}" Width="*" />
                                    <DataGridTextColumn Header="Тип" Binding="{Binding Path=Type}"  Width="0.5*"/>
                                    <DataGridTextColumn Header="Специализация" Binding="{Binding Path=Specialization}" Width="*"/>
                                    <DataGridTextColumn Header="Активна до" Binding="{Binding Path=ExpireDate, StringFormat=\{0:dd.MM.yy HH:mm\}}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Магазин" x:Name="tabShop">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300" />
                        </Grid.ColumnDefinitions>
                        <TreeView Background="Transparent" BorderThickness="0">
                            <TreeView.Resources>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="FontSize" Value="18" />
                                    <Setter Property="Foreground" Value="{StaticResource clrWhite}" />
                                </Style>
                            </TreeView.Resources>
                            <TreeViewItem Header="Все товары">
                                <TreeViewItem Header="Акции" />
                                <TreeViewItem Header="Ротации">
                                    <TreeViewItem Header="PvE" />
                                    <TreeViewItem Header="PvP" />
                                </TreeViewItem>
                                <TreeViewItem Header="Утилити" />
                                <TreeViewItem Header="Боты" />
                            </TreeViewItem>
                        </TreeView>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</Window>
