<UserControl
    x:Class="Launcher.Components.CMainPageButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:components="clr-namespace:Launcher.Components"
    mc:Ignorable="d"
    MinHeight="20"
    MinWidth="50"
    d:DataContext="{Binding RelativeSource={x:Static RelativeSource.Self}}">
    <Grid>
        <!--#region Фон для активации -->
        <Border Background="Black" Opacity="0"/>
        <!--#endregion-->

        <StackPanel
            VerticalAlignment="Center"
            Margin="{Binding Padding}">
            <!--#region Текст -->
            <TextBlock
                x:Name="TextBlock"
                Text="{Binding Text}"
                Margin="5 0 5 0"
                FontFamily="{Binding FontFamily, RelativeSource={RelativeSource AncestorType={x:Type components:CMainPageButton}}}"
                FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType={x:Type components:CMainPageButton}}}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center" />
            <!--#endregion-->
            <!--#region Декорация -->
            <Rectangle
                x:Name="Decoration"
                VerticalAlignment="Bottom"
                Height="4"
                Width="0"
                Margin="0 1 0 0">
                <Rectangle.Fill>
                    <LinearGradientBrush
                        StartPoint="0,0"
                        EndPoint="1,0">
                        <GradientStop
                            Color="Transparent"
                            Offset="0" />
                        <GradientStop
                            Color="#3FFFFFFF"
                            Offset="0.3" />
                        <GradientStop
                            Color="#B2FFFFFF"
                            Offset="0.5" />
                        <GradientStop
                            Color="#3FFFFFFF"
                            Offset="0.7" />
                        <GradientStop
                            Color="Transparent"
                            Offset="1" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <!--#endregion-->
        </StackPanel>
    </Grid>
</UserControl>
