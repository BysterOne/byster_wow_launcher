<UserControl
    x:Class="Launcher.Components.CRedeemCodeBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Launcher.Components"
    mc:Ignorable="d"
    Height="50"
    Width="400">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/Launcher;component/Styles/Global.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush
                x:Key="TextBox.Static.Border"
                Color="#FFABAdB3" />
            <SolidColorBrush
                x:Key="TextBox.MouseOver.Border"
                Color="#FF7EB4EA" />
            <SolidColorBrush
                x:Key="TextBox.Focus.Border"
                Color="#FF569DE5" />
            <Style
                x:Key="TextBoxStyle"
                TargetType="{x:Type TextBox}">
                <Setter
                    Property="Background"
                    Value="Transparent" />
                <Setter
                    Property="BorderBrush"
                    Value="{StaticResource TextBox.Static.Border}" />
                <Setter
                    Property="Foreground"
                    Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
                <Setter
                    Property="BorderThickness"
                    Value="0" />
                <Setter
                    Property="KeyboardNavigation.TabNavigation"
                    Value="None" />
                <Setter
                    Property="HorizontalContentAlignment"
                    Value="Left" />
                <Setter
                    Property="FocusVisualStyle"
                    Value="{x:Null}" />
                <Setter
                    Property="AllowDrop"
                    Value="true" />
                <Setter
                    Property="FontFamily"
                    Value="Roboto" />
                <Setter
                    Property="FontSize"
                    Value="24" />
                <Setter
                    Property="Foreground"
                    Value="#FFC3C3C3" />
                <Setter
                    Property="ScrollViewer.PanningMode"
                    Value="VerticalFirst" />
                <Setter
                    Property="Stylus.IsFlicksEnabled"
                    Value="False" />
                <Setter
                    Property="Template">
                    <Setter.Value>
                        <ControlTemplate
                            TargetType="{x:Type TextBox}">
                            <StackPanel>
                                <Border
                                    Margin="0 3"
                                    x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    SnapsToDevicePixels="True">
                                    <ScrollViewer
                                        x:Name="PART_ContentHost"
                                        Focusable="false"
                                        HorizontalScrollBarVisibility="Hidden"
                                        VerticalScrollBarVisibility="Hidden" />
                                </Border>
                                <!--<Rectangle Margin="0 0 0 0" Height="2" VerticalAlignment="Bottom" RadiusX="1" RadiusY="1" Fill="White" Opacity="0.8"/>-->
                            </StackPanel>
                            <ControlTemplate.Triggers>
                                <Trigger
                                    Property="IsEnabled"
                                    Value="false">
                                    <Setter
                                        Property="Opacity"
                                        TargetName="border"
                                        Value="0.56" />
                                </Trigger>
                                <Trigger
                                    Property="IsMouseOver"
                                    Value="true">
                                    <Setter
                                        Property="BorderBrush"
                                        TargetName="border"
                                        Value="{StaticResource TextBox.MouseOver.Border}" />
                                </Trigger>
                                <Trigger
                                    Property="IsKeyboardFocused"
                                    Value="true">
                                    <Setter
                                        Property="BorderBrush"
                                        TargetName="border"
                                        Value="{StaticResource TextBox.Focus.Border}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <MultiTrigger>
                        <MultiTrigger.Conditions>
                            <Condition
                                Property="IsInactiveSelectionHighlightEnabled"
                                Value="true" />
                            <Condition
                                Property="IsSelectionActive"
                                Value="false" />
                        </MultiTrigger.Conditions>
                        <Setter
                            Property="SelectionBrush"
                            Value="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightBrushKey}}" />
                    </MultiTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid
        ClipToBounds="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition
                Width="Auto" />
        </Grid.ColumnDefinitions>
        <Rectangle
            Name="back_"
            Fill="#11FFFFFF"
            RadiusX="5"
            RadiusY="5"
            Grid.ColumnSpan="2" />

        <Grid
            x:Name="input_box"
            Cursor="IBeam"
            PreviewMouseLeftButtonDown="input_box_PreviewMouseLeftButtonDown">
            <Rectangle
                Fill="Black"
                Opacity="0"
                x:Name="panelboxback" />
            <TextBlock
                Name="placeholder_"
                Text="Погасить купон"
                Foreground="#FF949494"
                FontFamily="{DynamicResource fontfamily_main}"
                FontSize="20"
                LineHeight="15"
                Margin="20 0 0 0"
                Height="Auto"
                VerticalAlignment="Center"
                Visibility="Visible" />
            <TextBox
                Style="{DynamicResource TextBoxStyle}"
                FontFamily="{DynamicResource fontfamily_main}"
                FontSize="18"
                x:Name="input_"
                CaretBrush="#FFC3C3C3"
                Margin="20 0 10 0"
                VerticalAlignment="Center"
                Visibility="Visible"
                LostFocus="input__LostFocus"
                PreviewKeyDown="input__PreviewKeyDown"
                TextChanged="input__TextChanged" />
        </Grid>

        <Grid
            Grid.Column="1"
            VerticalAlignment="Center">
            <Rectangle
                Fill="Black"
                Opacity="0"
                x:Name="panelback" />
            <Grid
                Name="redeem_"
                Width="40"
                Height="40"
                Margin="0 0 6 0"
                Cursor="Hand"
                MouseLeave="PanelButtonMouseLeave"
                MouseEnter="PanelButtonMouseEnter"
                PreviewMouseLeftButtonDown="redeem__PreviewMouseLeftButtonDown">
                <Rectangle
                    x:Name="redeem_back"
                    Fill="White"
                    Opacity="0.05"
                    RadiusX="5"
                    RadiusY="5" />
                <Image
                    Source="/Launcher;component/Media/redeemcode_icon.png"
                    Height="28"
                    Opacity="0.5"
                    RenderOptions.BitmapScalingMode="HighQuality" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
