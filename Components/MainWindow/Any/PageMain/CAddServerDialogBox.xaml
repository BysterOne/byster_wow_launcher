<UserControl
    x:Class="Launcher.Components.MainWindow.Any.PageMain.CAddServerDialogBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Launcher.Components.MainWindow.Any.PageMain"
    xmlns:components="clr-namespace:Launcher.Components"
    xmlns:settings="clr-namespace:Launcher.Settings"
    xmlns:mainwindow="clr-namespace:Launcher.Components.MainWindow"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/Styles/Global.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <!--#region Фон -->
        <Rectangle
        x:Name="Background"
        MouseDown="Background_MouseDown"
            Fill="{StaticResource back_main}"
            Opacity="0.95" />
        <!--#endregion-->

        <!--#region Центральный блок -->
        <Grid
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            x:Name="middleGrid"
            MinWidth="150">
            <!--#region Разметка -->
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto"
                    MinHeight="70" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <!--#endregion-->
            <!--#region Фон -->
            <Rectangle
                Grid.RowSpan="2"
                Fill="{DynamicResource back_second}"
                RadiusX="15"
                RadiusY="15" />
            <!--#endregion-->
            <!--#region Кнопка закрытия -->
            <components:CButton
                x:Name="MG_close_button"
                BackColor="Transparent"
                Icon="/Media/close_icon.png"
                Text=""
                BorderRadius="15"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Padding="8"
                MouseLeftButtonDown="MG_close_button_MouseLeftButtonDown" />
            <!--#endregion-->
            <!--#region Заголовок -->
            <StackPanel
                x:Name="MG_header"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock
                    x:Name="MGH_value"
                    d:Text="Заголовок"
                    FontFamily="{DynamicResource fontfamily_main}"
                    FontSize="22"
                    Foreground="{DynamicResource textcolor_main}" />
                <Rectangle
                    Height="5"
                    Width="60"
                    Fill="White"
                    RadiusX="2"
                    RadiusY="2"
                    Margin="10 5 10 0" />
            </StackPanel>
            <!--#endregion-->
            <!--#region Основной контент -->
            <StackPanel
                x:Name="MG_content"
                Grid.Row="1"
                Width="300"
                Margin="15 5 15 15">
                <!--#region Название сервера -->
                <components:CTextInput
                    x:Name="MGC_server_name"
                    BackColor="#19FFFFFF"
                    BorderRadius="10"
                    Placeholder="Название"
                    PlaceholderColor="#FFBBBBBB"
                    Margin="0 0 0 15" 
                    Height="50"/>
                <!--#endregion-->
                <!--#region Путь к файлу -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition
                            Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--#region Путь -->
                    <Grid
                        Margin="0 0 10 0">
                        <Rectangle
                            Fill="#19FFFFFF"
                            RadiusX="10" RadiusY="10"
                            Height="50"/>
                        <TextBlock
                            x:Name="MGC_path"
                            Grid.Column="0"
                            Foreground="#FFBBBBBB"
                            FontFamily="{DynamicResource fontfamily_main}"
                            FontSize="20"
                            VerticalAlignment="Center"
                            Margin="15 0 15 0"/>
                    </Grid>
                    
                    <!--#endregion-->
                    <!--#region Кнопка выбора -->
                    <components:CButton
                        x:Name="MGC_select_path"
                        Grid.Column="1"
                        Text=""
                        Width="50"
                        BorderRadius="10"
                        IconWidth="30"
                        IconHeight="35"
                        Padding="0"
                        Icon="/Media/Main/folder_icon.png"
                        RenderOptions.BitmapScalingMode="{Binding Source={x:Static settings:AppSettings.GlobalBitmapScalingMode}}"
                        MouseLeftButtonDown="MGC_select_path_MouseLeftButtonDown" />
                    <!--#endregion-->
                </Grid>
                <!--#endregion-->
                <!--#region Иконки -->
                <Grid
                    x:Name="MGC_icons"
                    Margin="0 10 0 10">
                    <!--#region Разметка -->
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <!--#endregion-->
                    <!--#region Название -->
                    <TextBlock
                        x:Name="MGCI_header"
                        d:Text="Иконка"
                        FontFamily="{DynamicResource fontfamily_main}"
                        FontSize="20"
                        Foreground="{DynamicResource textcolor_main}"
                        HorizontalAlignment="Center" />
                    <!--#endregion-->
                    <!--#region Иконки -->
                    <WrapPanel
                        Grid.Row="1"
                        x:Name="MGCI_icons_panel"
                        Cursor="Hand"
                        Margin="0 5 0 5"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                        <mainwindow:CFilterChanger
                            Text=""
                            ChangerType="Icon"
                            Icon="/Media/Shop/ClassIcons/death_knight_icon.png"
                            MarkerHeight="50"
                            MarkerWidth="50"
                            Margin="5" />
                    </WrapPanel>
                    <!--#endregion-->
                </Grid>
                <!--#endregion-->
                <!--#region Сохранить -->
                <components:CButton
                    x:Name="MGC_save"
                    Text="Сохранить"
                    BackColor="{DynamicResource green_main}"
                    BorderRadius="10"
                    Width="200"
                    Margin="0 0 0 0"
                    Icon="/Media/save_icon.png"
                    MouseLeftButtonDown="MGC_save_MouseLeftButtonDown" />
                <!--#endregion-->
            </StackPanel>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->
    </Grid>
</UserControl>
