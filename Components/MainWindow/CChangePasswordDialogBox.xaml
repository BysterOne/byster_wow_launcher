<UserControl
    x:Class="Launcher.Components.MainWindow.CChangePasswordDialogBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Launcher.Components.MainWindow"
    xmlns:components="clr-namespace:Launcher.Components"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding RelativeSource={x:Static RelativeSource.Self}}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/Launcher;component/Styles/Global.xaml" />
                <ResourceDictionary
                    Source="/Launcher;component/Styles/Authorization.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <!--#region Фон -->
        <Rectangle
            Fill="{StaticResource back_main}"
            Opacity="0.99" />
        <!--#endregion-->        

        <!--#region Основной блок -->
        <Grid
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            x:Name="middleGrid"
            MinWidth="150">
            <!--#region Разметка -->
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto"
                    MinHeight="60" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <!--#endregion-->
            <!--#region Фон -->
            <Rectangle
                Grid.RowSpan="2"
                Fill="{DynamicResource back_second}"
                RadiusX="15"
                RadiusY="15" />
            <!--#endregion-->
            <!--#region Кнопка закрытия -->
            <components:CButton
                x:Name="MG_close_button"
                BackColor="Transparent"
                Icon="/Launcher;component/Media/close_icon.png"
                Text=""
                BorderRadius="15"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Padding="8"
                MouseLeftButtonDown="MG_close_button_MouseLeftButtonDown" />
            <!--#endregion-->
            <!--#region Заголовок -->
            <StackPanel
                x:Name="MG_header"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock
                    x:Name="MGH_value"
                    d:Text="Заголовок"
                    FontFamily="{DynamicResource fontfamily_main}"
                    FontSize="22"
                    Foreground="{DynamicResource textcolor_main}" />
                <Rectangle
                    Height="5"
                    Width="60"
                    Fill="White"
                    RadiusX="2"
                    RadiusY="2"
                    Margin="10 5 10 0" />
            </StackPanel>
            <!--#endregion-->
            <!--#region Основной контент -->
            <StackPanel
                x:Name="MG_content"
                Grid.Row="1"
                Width="300"
                Margin="5 0 5 15">
                <!--#region Пароль -->
                <components:CTextInput
                    TabIndex="2"
                    InputType="Password"
                    x:Name="LP_password_input"
                    Style="{DynamicResource CTextInputStyle}"
                    Placeholder="Пароль"
                    KeyDown="LP_password_input_KeyDown" />
                <!--#endregion-->
                <!--#region Пароль -->
                <components:CTextInput
                    TabIndex="3"
                    InputType="Password"
                    x:Name="RP_repeat_password_input"
                    Style="{DynamicResource CTextInputStyle}"
                    Placeholder="Повторите пароль"
                    KeyDown="RP_repeat_password_input_KeyDown" />
                <!--#endregion-->
                <!--#region Кнопка -->
                <components:CButton 
                x:Name="MG_save"
                    BackColor="{DynamicResource green_main}"
                    BorderRadius="12"
                    Text="Сохранить"
                    Margin="0 10 0 0"
                    FontFamily="{DynamicResource fontfamily_main}"
                    Foreground="{DynamicResource textcolor_main}"
                    FontSize="20"
                    Padding="20 10"
                    Icon="/Launcher;component/Media/save_icon.png"
                    MouseLeftButtonDown="MG_save_MouseLeftButtonDown"/>
                <!--#endregion-->
            </StackPanel>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->
    </Grid>
</UserControl>
