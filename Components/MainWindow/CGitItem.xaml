<UserControl
    x:Class="Launcher.Components.MainWindow.CGitItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Launcher.Components.MainWindow"
    xmlns:component="clr-namespace:Launcher.Components"
    mc:Ignorable="d"
    d:DesignHeight="60"
    d:DesignWidth="700">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/Launcher;component/Styles/Global.xaml" />
                <ResourceDictionary
                    Source="/Launcher;component/Components/ScrollPanel/CScrollPanelStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style
                x:Key="TextBlockStyle"
                TargetType="{x:Type TextBlock}">
                <Setter
                    Property="Foreground"
                    Value="{DynamicResource textcolor_main}" />
                <Setter
                    Property="FontSize"
                    Value="18" />
                <Setter
                    Property="FontFamily"
                    Value="{DynamicResource fontfamily_main}" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <!--#region Фон -->
        <Border
            Background="#19FFFFFF"
            CornerRadius="12" />
        <!--#endregion-->
        <!--#region Информация -->
        <Grid
            x:Name="ContentPanel">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition
                    Width="Auto"
                    SharedSizeGroup="Git_ProductType" />
                <ColumnDefinition
                    Width="Auto"
                    SharedSizeGroup="Git_ProductClass" />
                <ColumnDefinition
                    Width="Auto"
                    SharedSizeGroup="Git_ProductSync"/>
            </Grid.ColumnDefinitions>

            <!--#region Название и путь -->
            <Grid
                VerticalAlignment="Center"
                Margin="20 0 10 0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>

                <!--#region Название -->
                <TextBlock
                    x:Name="CP_name"
                    Grid.Row="0"
                    FontSize="20"
                    Style="{DynamicResource TextBlockStyle}"
                    Text="Core_gui" />
                <!--#endregion-->
                <!--#region Путь -->
                <TextBlock
                x:Name="CP_path"
                    Grid.Row="1"
                    Foreground="Gray"
                    FontSize="16"
                    TextTrimming="CharacterEllipsis"
                    HorizontalAlignment="Left"
                    Text="../Any/Classes/path_to_file.toc"
                    Style="{DynamicResource TextBlockStyle}" />
                <!--#endregion-->
            </Grid>
            <!--#endregion-->
            <!--#region Тип -->
            <TextBlock
                Style="{DynamicResource TextBlockStyle}"
                x:Name="CP_type"
                Text="Core Module"
                Grid.Column="1"
                Margin="15 0 15 0"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"/>
            <!--#endregion-->
            <!--#region Класс -->
            <TextBlock
                Style="{DynamicResource TextBlockStyle}"
                x:Name="CP_class"
                Text="Все"
                Grid.Column="2"
                Margin="15 0 15 0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center" />
            <!--#endregion-->
            <!--#region Синхронизация -->
            <Grid
                x:Name="CP_sync_panel"
                Grid.Column="3"
                Margin="10 0"
                HorizontalAlignment="Center">
                <!--#region Кпопка обновления/скачивания -->
                <component:CButton
                    x:Name="CPSP_sync_button"
                    Text="Обновить"
                    Padding="10 5"
                    BorderRadius="10"
                    VerticalAlignment="Center"
                    Icon="/Launcher;component/Media/Main/update_icon.png"
                    IconHeight="24"
                    IconWidth="24"
                    Opacity="0" />
                <!--#endregion-->
                <!--#region Обновление -->
                <Grid
                    x:Name="CPSP_updating_panel">
                    <Image
                        Width="24"
                        Height="24"
                        Source="/Launcher;component/Media/Main/update_icon.png">
                        <Image.LayoutTransform>
                            <RotateTransform Angle="50"/>
                        </Image.LayoutTransform>
                    </Image>
                </Grid>
                <!--#endregion-->
            </Grid>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->
    </Grid>
</UserControl>
