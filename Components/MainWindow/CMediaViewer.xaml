<UserControl
    x:Class="Launcher.Components.MainWindow.CMediaViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Launcher.Components.MainWindow"
    xmlns:components="clr-namespace:Launcher.Components"
    xmlns:settings="clr-namespace:Launcher.Settings"
    xmlns:mainwindow="clr-namespace:Launcher.Components.MainWindow"
    mc:Ignorable="d"
    d:DesignHeight="950"
    d:DesignWidth="1000">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/Launcher;component/Styles/Global.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <LinearGradientBrush
                x:Key="backbfill"
                StartPoint="0, 0"
                EndPoint="1, 0">
                <GradientStopCollection>
                    <GradientStop
                        Color="#0CFFFFFF"
                        Offset="1" />
                    <GradientStop
                        Color="#19FFFFFF"
                        Offset="0" />
                </GradientStopCollection>
            </LinearGradientBrush>
            <LinearGradientBrush
                x:Key="nextbfill"
                StartPoint="0, 0"
                EndPoint="1, 0">
                <GradientStopCollection>
                    <GradientStop
                        Color="#99000000"
                        Offset="0" />
                    <GradientStop
                        Color="#00000000"
                        Offset="1" />
                </GradientStopCollection>
            </LinearGradientBrush>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <!--#region Фон -->
        <Rectangle
            Fill="{DynamicResource back_main}"
            Opacity="0.99" />
        <!--#endregion-->

        <!--#region Основной блок -->
        <Grid
            x:Name="middleGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="60" />
                <ColumnDefinition />
                <ColumnDefinition
                    Width="60" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="50" />
                <RowDefinition />
                <RowDefinition
                    Height="50" />
            </Grid.RowDefinitions>
            <Rectangle
                Fill="White"
                Opacity="0"
                Grid.ColumnSpan="3"
                Grid.RowSpan="3" />

            <!--#region Кнопка закрытия -->
            <components:CButton
                x:Name="MG_close_button"
                BackColor="Transparent"
                Icon="/Launcher;component/Media/close_icon.png"
                Text=""
                BorderRadius="15"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Padding="8"
                Grid.Column="2"
                MouseLeftButtonDown="MG_close_button_MouseLeftButtonDown" />
            <!--#endregion-->

            <!--#region Кнопка для пролистывание назад -->
            <Grid
                x:Name="MG_back_button"
                Grid.Row="1"
                Cursor="Hand">
                <!--#region Фон -->
                <Border
                    x:Name="MGBB_background"
                    CornerRadius="0 10 10 0"
                    Opacity="0">
                    <Border.Background>
                        <LinearGradientBrush
                            StartPoint="0, 0"
                            EndPoint="1, 0">
                            <GradientStopCollection>
                                <GradientStop
                                    Color="Transparent"
                                    Offset="1" />
                                <GradientStop
                                    Color="#0CFFFFFF"
                                    Offset="0" />
                            </GradientStopCollection>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <!--#endregion-->
                <!--#region Иконка -->
                <Image
                    Source="/Launcher;component/Media/right_icon.png"
                    Width="50"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    RenderOptions.BitmapScalingMode="{Binding Source={x:Static settings:AppSettings.GlobalBitmapScalingMode}}">
                    <Image.LayoutTransform>
                        <ScaleTransform
                            ScaleX="-1" />
                    </Image.LayoutTransform>
                </Image>
                <!--#endregion-->
            </Grid>
            <!--#endregion-->

            <!--#region Кнопка для пролистывание вперед -->
            <Grid
                x:Name="MG_next_button"
                Grid.Row="1"
                Grid.Column="2"
                Cursor="Hand">
                <!--#region Фон -->
                <Border
                    x:Name="MGNB_background"
                    CornerRadius="10 0 0 10"
                    Opacity="0">
                    <Border.Background>
                        <LinearGradientBrush
                            StartPoint="0, 0"
                            EndPoint="1, 0">
                            <GradientStopCollection>
                                <GradientStop
                                    Color="Transparent"
                                    Offset="0" />
                                <GradientStop
                                    Color="#0CFFFFFF"
                                    Offset="1" />
                            </GradientStopCollection>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <!--#endregion-->
                <!--#region Иконка -->
                <Image
                    Source="/Launcher;component/Media/right_icon.png"
                    Width="50"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    RenderOptions.BitmapScalingMode="{Binding Source={x:Static settings:AppSettings.GlobalBitmapScalingMode}}">
                </Image>
                <!--#endregion-->
            </Grid>
            <!--#endregion-->

            <!--#region Для показа картинок -->
            <Grid
                Opacity="0"
                Margin="80 60"
                Grid.ColumnSpan="3"
                Grid.RowSpan="3"
                Panel.ZIndex="-1"
                x:Name="MG_image_block"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Border
                    CornerRadius="20"
                    ClipToBounds="True">
                    <!--#region Маска -->
                    <Border.OpacityMask>
                        <VisualBrush>
                            <VisualBrush.Visual>
                                <Border
                                    CornerRadius="15"
                                    Background="White"
                                    Width="{Binding ActualWidth, ElementName=MG_image_block}"
                                    Height="{Binding ActualHeight, ElementName=MG_image_block}" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Border.OpacityMask>
                    <!--#endregion-->

                    <!--#region Изображение -->
                    <Image
                        Source="/Launcher;component/Media/test-back.jpg"
                        x:Name="MGIB_image"
                        Stretch="Uniform"
                        PreviewMouseLeftButtonUp="MG_image_block_PreviewMouseLeftButtonUp"
                        RenderOptions.BitmapScalingMode="{Binding Source={x:Static settings:AppSettings.GlobalBitmapScalingMode}}" />
                    <!--#endregion-->
                </Border>
            </Grid>
            <!--#endregion-->

            <!--#region Для показа видео -->
            <Grid
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="80 40"
                Grid.ColumnSpan="3"
                Grid.RowSpan="3"
                x:Name="MG_video_block"
                Panel.ZIndex="9"
                Opacity="1">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--#region Медиа элемент -->
                <MediaElement
                    Width="860"
                    Height="480"
                    Grid.Row="0"
                    IsMuted="False"
                    x:Name="MGVB_video"
                    LoadedBehavior="Manual"
                    MediaEnded="MGVB_video_MediaEnded"
                    MediaOpened="MGVB_video_MediaOpened"
                    PreviewMouseLeftButtonDown="MGVB_video_PreviewMouseLeftButtonDown" />
                <!--#endregion-->

                <!--#region Панель управления -->
                <Grid
                    Grid.Row="1"
                    Height="Auto"
                    x:Name="MGBV_control_panel">
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="20" />
                        <RowDefinition
                            Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--#region Таймлайн -->
                    <Grid
                        x:Name="MGBVCP_timeline"
                        MouseLeave="MGBVCP_timeline_MouseLeave"
                        PreviewMouseMove="MGBVCP_timeline_PreviewMouseMove"
                        MouseLeftButtonUp="MGBVCP_timeline_MouseLeftButtonUp"
                        PreviewMouseLeftButtonDown="MGBVCP_timeline_PreviewMouseLeftButtonDown"
                        Cursor="Hand">
                        <Rectangle
                            Fill="White"
                            Opacity="0" />
                        <Rectangle
                            Fill="#ffffff"
                            RadiusX="3"
                            RadiusY="3"
                            Height="5"
                            Opacity="0.2"
                            HorizontalAlignment="Left"
                            Width="{Binding ElementName=MGBV_control_panel, Path=ActualWidth}" />
                        <Rectangle
                            Width="0"
                            RadiusX="3"
                            RadiusY="3"
                            Height="5"
                            Opacity="1"
                            x:Name="MGBVCPT_line"
                            HorizontalAlignment="Left"
                            Fill="{DynamicResource marker_fill}" />
                    </Grid>
                    <!--#endregion-->

                    <!--#region Кнопки управления и время -->
                    <Grid
                        x:Name="MGBVCP_buttons"
                        Height="60"
                        Grid.Row="1" Margin="0 0 0 -60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="200" />
                            <ColumnDefinition />
                            <ColumnDefinition
                                Width="200" />
                        </Grid.ColumnDefinitions>

                        <!--#region Время -->
                        <TextBlock
                            x:Name="MGBVCPB_time"
                            Text="00:00 / 00:00"
                            Foreground="{DynamicResource textcolor_main}"
                            FontFamily="{DynamicResource fontfamily_main}"
                            FontSize="14"
                            FontWeight="Medium" />
                        <!--#endregion-->

                        <!--#region Кнопки -->
                        <StackPanel
                            Grid.Column="1"
                            Margin="0 10 0 0"
                            Orientation="Horizontal"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center">

                            <!--#region Назад -->
                            <components:CButton
                                Margin="5 0"
                                Text=""
                                x:Name="MGBVCPB_behind"
                                BackColor="Transparent"
                                Icon="/Launcher;component/Media/behind_icon.png"
                                MouseLeftButtonDown="MGBVCPB_behind_MouseLeftButtonDown">
                            </components:CButton>
                            <!--#endregion-->

                            <!--#region Пауза/Играть -->
                            <components:CButton                                
                                Text=""
                                Gap="0"
                                Margin="10 0"
                                Padding="0"
                                Height="40"
                                IconHeight="40"
                                IconWidth="40"
                                x:Name="MGBVCPB_play"
                                BackColor="Transparent"
                                Icon="/Launcher;component/Media/pause_icon.png"
                                MouseLeftButtonDown="MGVB_video_PreviewMouseLeftButtonDown">
                            </components:CButton>
                            <!--#endregion-->

                            <!--#region Вперед -->
                            <components:CButton
                                Margin="5 0"
                                Text=""
                                Gap="0"
                                x:Name="MGBVCPB_forward"
                                BackColor="Transparent"
                                Icon="/Launcher;component/Media/forward_icon.png"
                                MouseLeftButtonDown="MGBVCPB_forward_MouseLeftButtonDown">
                            </components:CButton>
                            <!--#endregion-->
                        </StackPanel>
                        <!--#endregion-->                       
                    </Grid>
                    <!--#endregion-->
                </Grid>
                <!--#endregion-->
            </Grid>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->
    </Grid>
</UserControl>
