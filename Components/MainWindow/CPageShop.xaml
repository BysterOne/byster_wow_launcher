<UserControl
    x:Class="Launcher.Components.MainWindow.CPageShop"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Launcher.Components.MainWindow"
    xmlns:components="clr-namespace:Launcher.Components"
    mc:Ignorable="d"
    d:Height="600"
    d:Width="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/Launcher;component/Styles/Global.xaml" />
                <ResourceDictionary
                    Source="/Launcher;component/Styles/Pages/ShopPage.xaml" />
                <ResourceDictionary
                    Source="/Launcher;component/Components/ScrollPanel/CScrollPanelStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid
        d:Background="{DynamicResource back_main}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--#region Фильтры -->
        <Grid
            x:Name="FiltersPanel"
            MinWidth="220"
            Margin="5 15 0 25">
            <components:CScrollPanel>
                <StackPanel
                    x:Name="FP_stack_panel"
                    Margin="5 0 10 0">
                    <!--#region Типы -->
                    <local:CFilterChanger
                        Text="Вdd оин"
                        ChangerType="Marker"
                        Foreground="{DynamicResource textcolor_main}"
                        FontFamily="{DynamicResource fontfamily_main}"
                        FontSize="20"
                        Margin="10 5 5 5" />
                    <!--#endregion-->
                    <!--#region Разделитель -->
                    <Rectangle
                        Style="{DynamicResource RectangleFiltersSpacer}" />
                    <!--#endregion-->
                    <!--#region Классы -->
                    <local:CFilterChanger
                        Text="Все"
                        ChangerType="Marker"
                        Foreground="White"
                        FontFamily="{DynamicResource fontfamily_main}"
                        FontSize="20"
                        Margin="10 5 5 5" />
                    <!--#endregion-->
                </StackPanel>
            </components:CScrollPanel>
        </Grid>
        <!--#endregion-->
        <!--#region Продукты и корзина -->
        <Grid
            Grid.Column="1"
            x:Name="main_panel"
            Margin="10 0 10 10">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition
                    Height="Auto" />
            </Grid.RowDefinitions>

            <!--#region Продукты -->
            <local:CProductList HorizontalAlignment="Left" x:Name="MP_products_list" Margin="0 0 0 8"/>
            <!--#endregion-->
            <!--#region Панель -->
            <Grid
                x:Name="MP_buy_panel"
                Grid.Row="1"
                Margin="5 5 15 5"
                HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--#region Сумма корзины -->
                <TextBlock
                x:Name="MPBP_cart_sum"
                    Style="{DynamicResource Base_TextBlock}"
                    Text="0 RUB"
                    VerticalAlignment="Center"
                    Margin="0 0 10 0"
                    FontSize="22"/>
                <!--#endregion-->
                <!--#region Купить -->
                <components:CButton
                    Text="К оплате"
                    BackColor="#FF2AA72A"
                    BorderRadius="8"
                    VerticalAlignment="Center"
                    Margin="5"
                    MinWidth="180"
                    FontFamily="{DynamicResource fontfamily_main}"
                    FontSize="20"
                    Grid.Column="2" 
                    x:Name="MPBP_buy_button"
                    MouseDown="MPBP_buy_button_MouseDown"/>
                <!--#endregion-->
                <!--#region Корзина -->
                <components:CButton
                    Text="Корзина" 
                    x:Name="MPBP_cart"
                    BackColor="#26FFFFFF"
                    BorderRadius="8"
                    VerticalAlignment="Center"
                    Margin="5"
                    MinWidth="180"
                    FontFamily="{DynamicResource fontfamily_main}"
                    FontSize="20"
                    Grid.Column="3"
                    Icon="/Launcher;component/Media/cart_icon.png"
                    IconWidth="25"
                    Gap="3"
                    MouseLeftButtonDown="MPBP_cart_MouseLeftButtonDown"/>
                <!--#endregion-->
               
            </Grid>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->
    </Grid>
</UserControl>
