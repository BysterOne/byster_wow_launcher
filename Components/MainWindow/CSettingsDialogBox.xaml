<UserControl
    x:Class="Launcher.Components.MainWindow.CSettingsDialogBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Launcher.Components.MainWindow"
    xmlns:components="clr-namespace:Launcher.Components"
    xmlns:shoppage="clr-namespace:Launcher.Components.MainWindow.Any.PageShop"
    xmlns:settings="clr-namespace:Launcher.Settings"
    xmlns:mainwindow="clr-namespace:Launcher.Components.MainWindow"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/Launcher;component/Styles/Main.xaml" />
                <ResourceDictionary
                    Source="/Launcher;component/Styles/Global.xaml" />
                <ResourceDictionary
                    Source="/Launcher;component/Components/Skeleton/CSkeletonStyle.xaml" />
                <ResourceDictionary
                    Source="/Launcher;component/Styles/Pages/ShopPage.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <!--#region Фон -->
        <Rectangle
            Fill="{StaticResource back_main}" />
        <!--#endregion-->

        <!--#region Центральный блок -->
        <Grid
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            x:Name="middleGrid"
            Width="700"
            MinHeight="480">
            <!--#region Разметка -->
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <!--#endregion-->
            <!--#region Фон -->
            <Rectangle
                Fill="{DynamicResource back_second}"
                RadiusX="19"
                RadiusY="19"
                Grid.RowSpan="2" />
            <!--#endregion-->
            <!--#region Кнопка закрытия -->
            <components:CButton
                Grid.Column="1"
                x:Name="MG_close_button"
                BackColor="Transparent"
                Icon="/Media/close_icon.png"
                Text=""
                BorderRadius="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Padding="8"
                MouseLeftButtonDown="MG_close_button_MouseLeftButtonDown"
                Panel.ZIndex="2" />
            <!--#endregion-->

            <!--#region Переключатели -->
            <StackPanel
                x:Name="MG_buttons_panel"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
                <!--#region Основные -->
                <components:CMainPageButton
                    Grid.Column="0"
                    Grid.Row="0"
                    Style="{DynamicResource TopPanel_MainPageButtonStyle}"
                    Text="ОСНОВНЫЕ"
                    HorizontalAlignment="Right"
                    IsActive="True"
                    x:Name="MGBP_main"
                    FontSize="22"
                    Margin="0 0 5 0"
                    MouseDown="MGBP_main_MouseDown" />
                <!--#endregion-->
                <!--#region Расширенные -->
                <components:CMainPageButton
                    Grid.Column="1"
                    Grid.Row="0"
                    Style="{DynamicResource TopPanel_MainPageButtonStyle}"
                    Text="РАСШИРЕННЫЕ"
                    IsActive="False"
                    Margin="5 0 0 0"
                    HorizontalAlignment="Left"
                    x:Name="MGBP_advanced"
                    FontSize="22"
                    MouseDown="MGBP_advanced_MouseDown" />
                <!--#endregion-->
            </StackPanel>
            <!--#endregion-->
            <!--#region Панели -->
            <Grid
                x:Name="MG_panels"
                Grid.Row="1">
                <!--#region Основные -->
                <Grid
                    x:Name="MGP_main">
                    <StackPanel
                        Margin="10 5 10 10"
                        HorizontalAlignment="Center">
                        <!--#region Кэш и пароль -->
                        <StackPanel
                            Orientation="Horizontal">
                            <!--#region Смена пароля -->
                            <components:CButton
                                x:Name="MGPM_change_password"
                                Style="{DynamicResource SettingsButtonStyle}"
                                Text="Сменить пароль" />
                            <!--#endregion-->
                            <!--#region Очистка кэша -->
                            <components:CButton
                                x:Name="MGPM_clear_cache"
                                Style="{DynamicResource SettingsButtonStyle}"
                                Text="Очистить кэш"
                                MouseDown="MGPM_clear_cache_MouseDown"/>
                            <!--#endregion-->
                        </StackPanel>
                        <!--#endregion-->
                        <!--#region Погасить купон -->
                        <components:CTextInput
                            x:Name="MGPM_redeem"
                            Icon="/Launcher;component/Media/redeemcode_icon.png"
                            BackColor="#11FFFFFF"
                            Margin="10"
                            Height="50"
                            BorderRadius="8"
                            Placeholder="Погасить купон"
                            PlaceholderColor="#FFCCCCCC" 
                            PreviewKeyDown="MGPM_redeem_PreviewKeyDown"/>
                        <!--#endregion-->
                        <!--#region Остальные настройки -->
                        <StackPanel>
                            <!--#region Сервер -->
                            <Grid
                                x:Name="MGPM_server_panel"
                                Panel.ZIndex="5"
                                Margin="10 15 10 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition
                                        SharedSizeGroup="shared_main"
                                        Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <!--#region Текст -->
                                <TextBlock
                                    Grid.Row="2"
                                    Text="Сервер"
                                    x:Name="MGPM_server_header"
                                    Style="{DynamicResource PayTextBlockHeaderStyle}"
                                    Margin="15 10 10 10" />
                                <!--#endregion-->
                                <!--#region Список -->
                                <Canvas
                                    Grid.Column="1"
                                    Panel.ZIndex="12"
                                    Margin="0 0 0 0"
                                    Width="250"
                                    HorizontalAlignment="Right">
                                    <components:CList
                                        x:Name="MGPM_server_list"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Right"
                                        Width="250"
                                        FontFamily="{DynamicResource fontfamily_main}"
                                        FontSize="18"
                                        Background="#FF2B2E35"
                                        SelectorColor="#05FFFFFF"
                                        BorderRadius="6"
                                        ElementHeight="46"
                                        IsOpened="False" 
                                       />
                                </Canvas>
                                <!--#endregion-->

                            </Grid>
                            <!--#endregion-->
                            <!--#region Локализация -->
                            <Grid
                                x:Name="MGPM_localization_panel"
                                Panel.ZIndex="4"
                                Margin="10 15 10 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition
                                        SharedSizeGroup="shared_main"
                                        Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <!--#region Текст -->
                                <TextBlock
                                    Text="Локализация"
                                    x:Name="MGPM_localization_header"
                                    Style="{DynamicResource PayTextBlockHeaderStyle}"
                                    Margin="15 10 10 10" />
                                <!--#endregion-->
                                <!--#region Список -->
                                <Canvas
                                    Grid.Column="1"
                                    Panel.ZIndex="14"
                                    Margin="0 0 0 0"
                                    Width="250"
                                    HorizontalAlignment="Right">
                                    <components:CList
                                        x:Name="MGPM_localization_list"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Right"
                                        Width="250"
                                        FontFamily="{DynamicResource fontfamily_main}"
                                        FontSize="18"
                                        Background="#FF2B2E35"
                                        SelectorColor="#05FFFFFF"
                                        BorderRadius="6"
                                        ElementHeight="46"
                                        IsOpened="False">
                                    </components:CList>
                                </Canvas>
                                <!--#endregion-->
                            </Grid>
                            <!--#endregion-->
                            <!--#region Шифрование -->
                            <Grid
                                x:Name="MGPM_toggle_encryption_panel"
                                Panel.ZIndex="4"
                                Margin="10 15 10 0"
                                Visibility="Collapsed">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition
                                        SharedSizeGroup="shared_main"
                                        Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <!--#region Текст -->
                                <TextBlock
                                    Text="Шифрование"
                                    x:Name="MGPMTEP_header"
                                    Style="{DynamicResource PayTextBlockHeaderStyle}"
                                    Margin="15 10 10 10" />
                                <!--#endregion-->
                                <!--#region Переключатель -->
                                
                                <!--#endregion-->
                            </Grid>
                            <!--#endregion-->
                        </StackPanel>
                        <!--#endregion-->
                    </StackPanel>
                </Grid>
                <!--#endregion-->
                <!--#region Расширенные -->
                <Grid
                    x:Name="MGP_advanced"
                    Visibility="Hidden">
                    <StackPanel
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                        <!--#region Иконка -->
                        <Image
                            Source="/Launcher;component/Media/in_development_icon.png"
                            Width="60"
                            RenderOptions.BitmapScalingMode="HighQuality" />
                        <!--#endregion-->
                        <!--#region Текст -->
                        <TextBlock
                            Foreground="{DynamicResource textcolor_main}"
                            FontFamily="{DynamicResource fontfamily_main}"
                            FontSize="18"
                            TextWrapping="Wrap"
                            MaxWidth="250"
                            Text="Данный раздел находиться в разработке"
                            TextAlignment="Center"
                            Margin="0 15 0 0"
                            x:Name="MGPA_text" />
                        <!--#endregion-->
                    </StackPanel>
                </Grid>
                <!--#endregion-->
            </Grid>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->
    </Grid>
</UserControl>
