<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Components="clr-namespace:Launcher.Components">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
            Source="Global.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style
        x:Key="AuthStackPanelStyle"
        TargetType="{x:Type StackPanel}">
        <Setter
            Property="VerticalAlignment"
            Value="Center" />
        <Setter
            Property="HorizontalAlignment"
            Value="Center" />
    </Style>
    <Style x:Key="FormButtonStyle" TargetType="{x:Type Components:CButton}">
        <Setter
            Property="BackColor"
            Value="{StaticResource AuthButtonBackground}"/>
        <Setter
            Property="BorderRadius" 
            Value="7"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="Padding" Value="25 0"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Components:CButton}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style
        x:Key="CTextInputStyle"
        TargetType="{x:Type Components:CTextInput}">
        <Setter
            Property="BackColor"
            Value="#0CFFFFFF" />
        <Setter
            Property="BorderRadius"
            Value="7" />
        <Setter
            Property="Width"
            Value="270" />
        <Setter
            Property="Height"
            Value="50" />
        <Setter
            Property="Margin"
            Value="0 8" />
        <Setter
            Property="PlaceholderColor"
            Value="#FFC1C1C1" />
        <Setter
            Property="FontFamily"
            Value="{DynamicResource fontfamily_main}" />
        <Setter
            Property="Template">
            <Setter.Value>
                <ControlTemplate
                    TargetType="{x:Type Components:CTextInput}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}"
                        SnapsToDevicePixels="true">
                        <ContentPresenter
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>