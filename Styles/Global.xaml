<ResourceDictionary
    x:Class="Launcher.Styles.GlobalResourceDictionary"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:settings="clr-namespace:Launcher.Settings"
    xmlns:Components="clr-namespace:Launcher.Components">
    <SolidColorBrush
        x:Key="orange_main"
        Color="#ffba03" />
    <LinearGradientBrush
        x:Key="marker_fill" StartPoint="0, 1" EndPoint="1, 0">
        <GradientStop Offset="0" Color="#ffba03"/>
        <GradientStop Offset="1"
            Color="#FFFF8203" />
    </LinearGradientBrush>
    <SolidColorBrush
        x:Key="back_main"
        Color="#090c16" />
    <SolidColorBrush
        x:Key="back_second"
        Color="#FF161921" />
    <SolidColorBrush
        x:Key="textcolor_main"
        Color="#FFF3F3F3" />
    <SolidColorBrush
        x:Key="green_main"
        Color="#109a44" />
    <SolidColorBrush
        x:Key="popup_back"
        Color="#B2000000" />
    <LinearGradientBrush
        x:Key="AuthButtonBackground"
        StartPoint="0,0.5"
        EndPoint="1,0.5">
        <GradientStop
            Color="#FF7303FF"
            Offset="0" />
        <GradientStop
            Color="#FF2A24DC"
            Offset="1" />
    </LinearGradientBrush>
    <FontFamily
        x:Key="fontfamily_main">Calibri</FontFamily>
    <sys:Double
        x:Key="fontsize_main">14</sys:Double>
    <Style
        x:Key="WindowControlButtonStyle"
        TargetType="{x:Type Components:CButton}">
        <Setter
            Property="Margin"
            Value="0" />
        <Setter
            Property="BorderRadius"
            Value="0" />
        <Setter
            Property="Padding"
            Value="0" />
        <Setter
            Property="Width"
            Value="40" />
        <Setter
            Property="Height"
            Value="40" />
        <Setter
            Property="Text"
            Value="" />
        <Setter
            Property="BackColor"
            Value="Transparent" />
        <Setter
            Property="Opacity"
            Value="0.8" />
        <Setter
            Property="IconHeight"
            Value="30" />
        <Setter
            Property="IconWidth"
            Value="30" />
        <Setter
            Property="RenderOptions.BitmapScalingMode"
            Value="{Binding Source={x:Static settings:AppSettings.GlobalBitmapScalingMode}}" />
        <EventSetter
            Event="MouseEnter"
            Handler="WindowControlButtonStyle_MouseEnter" />
        <EventSetter
            Event="MouseLeave"
            Handler="WindowControlButtonStyle_MouseLeave" />

        <Setter
            Property="Template">
            <Setter.Value>
                <ControlTemplate
                    TargetType="{x:Type Components:CButton}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}"
                        SnapsToDevicePixels="true">
                        <ContentPresenter
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style
        x:Key="MinimizeWindowControlButtonStyle"
        TargetType="{x:Type Components:CButton}"
        BasedOn="{StaticResource WindowControlButtonStyle}">
        <EventSetter
            Event="MouseDown"
            Handler="MinimizeWindowControlButtonStyle_MouseDown" />
    </Style>
    <Style
        x:Key="CloseWindowControlButtonStyle"
        TargetType="{x:Type Components:CButton}"
        BasedOn="{StaticResource WindowControlButtonStyle}">
        <EventSetter
            Event="MouseDown"
            Handler="CloseWindowControlButtonStyle_MouseDown" />
    </Style>
    <Style
        x:Key="Base_TextBlock"
        TargetType="{x:Type TextBlock}">
        <Setter
            Property="TextWrapping"
            Value="Wrap" />
        <Setter
            Property="TextTrimming"
            Value="None" />
        <Setter
            Property="FontFamily"
            Value="{StaticResource fontfamily_main}" />
        <Setter
            Property="FontSize"
            Value="18" />
        <Setter
            Property="TextAlignment"
            Value="Center" />
        <Setter
            Property="Foreground"
            Value="White" />
        <Setter
            Property="RenderOptions.BitmapScalingMode"
            Value="{Binding Source={x:Static settings:AppSettings.GlobalBitmapScalingMode}}" />
    </Style>
</ResourceDictionary>